<div class="container pt-100">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100 border", placeholder: "Email" %>
    </div>

    <div class="field">
      <%= f.text_field :name, autocomplete: "name", class: "w-100 border m-y", placeholder: "Name" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", class: "w-100 border", placeholder: "Password (6 character minimum)" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100 border m-y", placeholder: "Password confirmation" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "button_edit w-100" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
