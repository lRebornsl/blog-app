<div class="container pt-100">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'w-100 border' %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'w-100 border m-y' %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class: 'button_edit w-100' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>